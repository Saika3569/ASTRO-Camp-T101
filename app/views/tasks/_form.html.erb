<div class="w-50 mx-auto">
  <h1> <%= t("tasks.body.#{action_name}")%> </h1>

  <%if task.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <ul class="list-group">
      <% task.errors.full_messages.each do |message|%>
        <li class="list-group-item"> <%= message %> </li>
      <%end%>
    </ul>
  </div>
<% end %>


  <%= form_for task do |f| %>
    <div class='mb-3'>
      <%=f.label :title, class:'form-label' %>
      <%=f.text_field :title, class:'form-control',placeholder: "輸入標題" %>
    </div>
    <div class='mb-3'>
      <%=f.label :content, t('tasks.form.content'), class:'form-label' %>
      <%=f.text_field :content, class:'form-control',placeholder: "輸入內容" %>
    </div>
    <div class='mb-3'>
      <%=f.label :start_at, t('tasks.form.start_at'), class:'form-label' %>
      <%=f.date_select :start_at %>
    </div>
    <div class='mb-3'>
      <%=f.label :end_at, t('tasks.form.end_at'), class:'form-label' %>
      <%=f.date_select :end_at %>
    </div>
    <div class='mb-3'>
      <%=f.label :priority, t('tasks.form.priority'), class:'form-label' %>
      <%=f.select :priority ,Task.priorities.keys.map {|priority| [I18n.t("enums.task.priority.#{priority}"),priority]}, class:'asad' %>
    </div>
    <div>
      <%=f.submit t('tasks.form.submit'), class:'btn btn-outline-primary' %>
    </div>
  <% end %>

  <nav class="nav mx-auto w-25">
    <%= link_to t('tasks.link.back'), root_path , class:"nav-link" %>
  </nav>

</div>
