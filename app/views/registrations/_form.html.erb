<div class="w-50 mx-auto">

  <h1> <%= action_name == 'new' ? t('users.form.registration') : t('users.body.edit') %> </h1>

  <%if user.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <ul class="list-group">
      <% user.errors.full_messages.each do |message|%>
        <li class="list-group-item"> <%= message %> </li>
      <%end%>
    </ul>
  </div>
<% end %>


  <%= form_for user, url: users_path do |f| %>
    <div class='mb-3'>
      <%=f.label :name,t('users.form.name'), class:'form-label' %>
      <%=f.text_field :name, class:'form-control' %>
    </div>
    <div class='mb-3'>
      <%=f.label :account,t('users.form.account'), class:'form-label' %>
      <%=f.text_field :account, class:'form-control'%>
    </div>
    <div class='mb-3'>
      <%=f.label :password, t('users.form.password'), class:'form-label' %>
      <%=f.password_field :password, class:'form-control' %>
    </div>
    <div class='mb-3'>
      <%=f.label :password_confirmation,t('users.form.confirmation_password'), class:'form-label' %>
      <%=f.password_field :password_confirmation, class:'form-control' %>
    </div>
    <div>
      <%=f.submit t('tasks.form.submit'), class:'btn btn-outline-primary' %>
    </div>
  <% end %>

  <nav class="nav mx-auto w-25">
    <%= link_to t('tasks.link.back'), root_path , class:"nav-link" %>
  </nav>

</div>
