<div class="w-50 mx-auto">
  <h1> <%= t('users.form.sign_in') %> </h1>

  <%if user.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <ul class="list-group">
      <% user.errors.full_messages.each do |message|%>
        <li class="list-group-item"> <%= message %> </li>
      <%end%>
    </ul>
  </div>
<% end %>


  <%= form_for user,url: sign_in_users_path do |f| %>
    <div class='mb-3'>
      <%=f.label :email,t('users.form.email'), class:'form-label' %>
      <%=f.text_field :email, class:'form-control'%>
    </div>
    <div class='mb-3'>
      <%=f.label :password, t('users.form.password'), class:'form-label' %>
      <%=f.password_field :password, class:'form-control' %>
    </div>
    <div>
      <%=f.submit t('tasks.form.submit'), class:'btn btn-outline-primary' %>
    </div>
  <% end %>

  <nav class="nav justify-content-center mx-auto w-50">
    <li class="nav-item">
      <%= link_to t('tasks.link.back'), root_path , class:"nav-link" %>
    </li>
  </nav>
</div>
